# HATS Trading System - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# CryptoPanic API (News Collection)
# ==============================================
# Get your free API token at: https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_TOKEN=your_cryptopanic_token_here

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL + TimescaleDB
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hats_trading
POSTGRES_USER=hats_user
POSTGRES_PASSWORD=hats_password

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=hats_trading
MONGO_USER=hats_user
MONGO_PASSWORD=hats_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# LLM API Keys
# ==============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================
# LangSmith (Tracing & Monitoring)
# ==============================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=hats-trading

# ==============================================
# Exchange API Keys (for Live Trading)
# ==============================================
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# Alpaca (for testing)
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_API_SECRET=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # paper trading

# ==============================================
# Application Settings
# ==============================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Backtesting settings
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_COMMISSION=0.001  # 0.1% trading fee

# Risk management
MAX_POSITION_SIZE=0.3  # Max 30% per position
MAX_DAILY_LOSS=0.05    # Max 5% daily loss
STOP_LOSS_PCT=0.02     # 2% stop loss

# ==============================================
# Guardrails AI (Optional)
# ==============================================
GUARDRAILS_API_KEY=your_guardrails_api_key_here

# ==============================================
# Semantic Caching
# ==============================================
ENABLE_SEMANTIC_CACHE=true
CACHE_SIMILARITY_THRESHOLD=0.95
